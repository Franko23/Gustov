

<div class="modal inmodal" id="reporte" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false" ng-hide="hideModalreporte">
    <div class="modal-dialog">
        <div class="modal-content animated flipInY">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h6 class="modal-title">Imprimir Reporte Diario</h6>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-12">
                                <ng-form name="myForm5" novalidate>
                                    <label>Elige la fecha</label>
                                    <input type="date" name="fecha_reporte" id="fecha_reporte" ng-model="Mfecha_reporte" class="form-control" placeholder="dia-mes-año" required>
                                    <span style="color:red" ng-show="myForm5.fecha_reporte.$dirty && myForm5.fecha_reporte.$invalid">
                                        <span ng-show="myForm5.fecha_reporte.$error.required" ng-hide="Mventa_cantidad_plato_required">Seleccione una fecha válida</span>
                                    </span>
                                </ng-form>
                                
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" style="background-color:#0000FF;border-color:#0000FF;color:#FFFFFF" ng-click="imprimirReporteDiario()" ng-disabled="!myForm5.$valid"><i class="fa fa-print"></i> Imprimir PDF</button>
                <button type="button" style="background-color:#FF0000;border-color:#FF0000;color:#FFFFFF" class="btn btn-warning" data-dismiss="modal" id="cancelar" ng-click="cancelar()"><i class="fa fa-close"></i> Cancelar</button>
            </div>
        </div>
    </div>
</div>
