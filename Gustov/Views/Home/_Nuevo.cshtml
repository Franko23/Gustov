

<div class="modal inmodal" id="nuevo" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false" ng-hide="MhideModalNuevo">
    <div class="modal-dialog">
        <div class="modal-content animated flipInY">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h6 class="modal-title">Nuevo plato para el menú</h6>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <ng-form name="myForm1" novalidate>
                            <div class="form-group">

                                <label>
                                    Nombre
                                </label>
                                <input type="text" min="1" name="nombre_nuevo_plato" class="form-control" ng-model="Mnombre_nuevo_plato" placeholder="Nombre del plato" required>
                            </div>
                            <div class="form-group">

                                <label>
                                    Cantidad
                                </label>
                                <input type="number" min="1" name="cantidad_nuevo" class="form-control" ng-model="Mcantidad_nuevo" placeholder="Cantidad de platos" required>
                                <span style="color:red" ng-show="myForm1.cantidad_nuevo.$dirty">
                                    <span ng-show="myForm1.cantidad_nuevo.$error.required">Cantidad mínima "1"</span>
                                </span>
                            </div>


                            <button type="submit" ng-hide="MhideGuardarNuevo"
                                    ng-disabled="!myForm1.$valid"
                                    class="btn btn-primary" ng-click="clickGuardarNuevo(0)" data-dismiss="modal">
                                <span class="glyphicon glyphicon-floppy-save"></span> Guardar
                            </button>
                        </ng-form>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>
